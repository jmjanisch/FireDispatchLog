<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jjanisch.ember.entity.DepartmentEntity" table="department" schema="emberims">
        <id name="departmentId">
            <column name="department_id" sql-type="int(8)"/>
        </id>
        <property name="nfirsId">
            <column name="nfirs_id" sql-type="int(8)"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(80)" length="80" not-null="true"/>
        </property>
        <property name="city">
            <column name="city" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(2)" length="2" not-null="true"/>
        </property>
        <property name="zipcode">
            <column name="zipcode" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="contactFirstName">
            <column name="contact_first_name" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="contactLastName">
            <column name="contact_last_name" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="contactPhone">
            <column name="contact_phone" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="contactEmail">
            <column name="contact_email" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>